  <!-- Chart.js Script -->
  <script>
    // Initialize the Chart.js doughnut chart
    const ctx = document.getElementById('tokenomicsChart').getContext('2d');
    const tokenomicsChart = new Chart(ctx, {
      type: 'doughnut',
      data: {
        labels: ['Liquidity (70%)', 'Airdrop (8%)', 'Marketing & Partnerships (15%)', 'Team (7%)'],
        datasets: [{
          data: [70, 8, 15, 7],
          backgroundColor: ['#4caf50', '#ff9800', '#2196f3', '#9c27b0'],
          borderColor: ['#fff', '#fff', '#fff', '#fff'],
          borderWidth: 2
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            position: 'bottom'
          }
        }
      }
    });
    
    // FAQ Accordion Functionality
    const faqItems = document.querySelectorAll('.faq-item');
    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');
      question.addEventListener('click', () => {
        item.classList.toggle('active');
        const answer = item.querySelector('.faq-answer');
        answer.style.maxHeight = item.classList.contains('active') ? answer.scrollHeight + "px" : 0;
      });
    });
    
    // Back-to-Top Button Functionality
    const backToTopBtn = document.getElementById('back-to-top');
    window.addEventListener('scroll', () => {
      if (window.scrollY > 300) {
        backToTopBtn.classList.add('show');
      } else {
        backToTopBtn.classList.remove('show');
      }
    });
    backToTopBtn.addEventListener('click', () => {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    });
    
    // Navigation Active Link Functionality using IntersectionObserver
    const sections = document.querySelectorAll("section");
    const navLinks = document.querySelectorAll("nav ul li a");
    const observerOptions = { threshold: 0.5 };
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          navLinks.forEach(link => link.classList.remove("active"));
          const activeLink = document.querySelector(`nav ul li a[href="#${entry.target.id}"]`);
          if (activeLink) {
            activeLink.classList.add("active");
          }
        }
      });
    }, observerOptions);
    sections.forEach(section => observer.observe(section));
    
    // Falling Code Animation â€“ Updated for vertical, discrete slow motion.
    // Uses "Lexend Zetta" as the font, with font size 8, increased letter spacing, and a new word set.
    const canvas = document.getElementById('falling-code');
    const ctxCode = canvas.getContext('2d');
    
    // Resize canvas to full window dimensions
    function resizeCanvas() {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    }
    resizeCanvas();
    window.addEventListener('resize', resizeCanvas);
    
    const fontSize = 8; // Smaller font size
    const columns = Math.floor(canvas.width / fontSize);
    const drops = [];
    const currentWord = [];
    // New word set
    const wordSet = ["$LHyena", "Crypto", "Laughing Hyena", "2025", "BASE", "Ethereum"];
    for (let i = 0; i < columns; i++) {
      drops[i] = Math.random() * canvas.height / fontSize;
      currentWord[i] = wordSet[Math.floor(Math.random() * wordSet.length)];
    }
    
    const speed = 0.1; // Slow motion increment per frame
    const letterSpacing = 2; // Increase spacing between letters (in pixels)
    
    // Custom function to draw text with extra letter spacing
    function fillTextWithSpacing(ctx, text, x, y, spacing) {
      spacing = spacing || 2;
      for (let i = 0; i < text.length; i++) {
        const char = text[i];
        ctx.fillText(char, x, y);
        x += ctx.measureText(char).width + spacing;
      }
    }
    
    function draw() {
      // Use a slightly higher opacity for the trail effect
      ctxCode.fillStyle = "rgba(10, 25, 47, 0.1)";
      ctxCode.fillRect(0, 0, canvas.width, canvas.height);
      
      // Set text properties using Lexend Zetta for a digital look
      ctxCode.fillStyle = "#64FFDA"; // Accent cyan for falling text
      ctxCode.font = fontSize + "px 'Lexend Zetta', monospace";
      ctxCode.shadowColor = "#000";
      ctxCode.shadowBlur = 3;
      
      for (let i = 0; i < drops.length; i++) {
        // Use the chosen word for this column (stable until reset)
        const text = currentWord[i];
        const yPos = Math.floor(drops[i]) * fontSize;
        // Draw the text with increased letter spacing
        fillTextWithSpacing(ctxCode, text, i * fontSize, yPos, letterSpacing);
        
        // When word reaches bottom, reset drop and choose a new word from wordSet
        if (yPos > canvas.height && Math.random() > 0.975) {
          drops[i] = 0;
          currentWord[i] = wordSet[Math.floor(Math.random() * wordSet.length)];
        }
        drops[i] += speed;
      }
    }
    
    // Update the canvas every 100ms for slow-motion effect
    setInterval(draw, 100);
  </script>
</body>
</html>
